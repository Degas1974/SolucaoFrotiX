        /* ====== CENTRALIZAR BOTÕES DE AÇÃO ====== */
        .ftx-btn-acoes {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.375rem;
        }

        /* ====== MODAL PADRÃO FROTIX ====== */
        .ftx-modal .modal-content {
            border: none;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        }

        .ftx-modal .modal-header {
            background-color: #3D5771;
            padding: 1rem 1.25rem;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .ftx-modal .modal-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
