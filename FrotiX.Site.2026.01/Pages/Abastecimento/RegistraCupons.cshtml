        $('#modalRegistro').on('shown.bs.modal', function (event) {
            // Cria container para o visualizador PDF
            $("#PDFContainer").append("<div id='pdfViewer'> </div>");

            // Atualiza interface do Rich Text Editor
            defaultRTE.refreshUI();

            // Obtém ID do registro do botão que abriu o modal
            var button = $(event.relatedTarget);
            var RegistroId = button.data("id");

            // ═══════════════════════════════════════════════════════════════════
            // AJAX GET - Busca dados do cupom para exibição
            // ═══════════════════════════════════════════════════════════════════
            $.ajax({
                type: "get",
                url: "/api/Abastecimento/PegaRegistroCupons",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: { IDapi: RegistroId },
                success: function (data) {
                    /** @@type {string} Nome do arquivo PDF do cupom */
                    var RegistroPDF = data.registroPDF;
                    /** @@type {string} Observações em HTML do cupom */
                    var Observacoes = data.observacoes;

                    // Popula Rich Text Editor com observações
                    var rte = document.getElementById('rte').ej2_instances[0];
                    rte.value = Observacoes;

                    // Inicializa visualizador PDF Kendo com o arquivo do cupom
                    var pdfViewer = $("#pdfViewer").kendopdfViewer({
                        pdfjsProcessing: {
                            file: "/DadosEditaveis/Cupons/" + RegistroPDF
                        },
                        width: "100%",
                        height: 400
                    }).data("kendopdfViewer");
                },
                error: function (data) {
                    alert('error');
                    console.log(data);
                }
            });
        /**
         * Handler de fechamento do modal
         * @@param {Event} event - Evento Bootstrap Modal hide
         * @@description Limpa RTE, data e remove container PDF
         */
        }).on("hide.bs.modal", function (event) {
            // Limpa conteúdo do Rich Text Editor
            var rte = document.getElementById('rte').ej2_instances[0];
            rte.value = '';

            // Limpa campo de data
            document.getElementById("txtDataRegistro").value = "";

            // Remove container PDF para limpar visualização anterior
            $("#PDFContainer").remove();
        });
