@page "/logs-viewer"
@implements IDisposable
@inject AlertaJs Alerta
@inject NavigationManager Navigation

<PageTitle>Log de Erros - FrotiX Vistoria</PageTitle>

<!-- Botão Voltar Laranja Redondo -->
<button type="button" class="btn-voltar-laranja" @onclick="VoltarParaHome">
    <i class="fa-duotone fa-arrow-left"></i>
</button>

<div class="logs-container">
    <div class="page-header">
        <div class="header-content">
            <i class="fa-duotone fa-bug header-icon"></i>
            <div>
                <h3>Log de Erros</h3>
                <p class="header-subtitle">Visualização de ocorrências e detalhes técnicos</p>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filtros-card">
        <div class="filtros-grid">
            <div class="filtro-item filtro-busca">
                <label>Buscar</label>
                <input type="text" 
                       class="form-control" 
                       placeholder="Buscar na mensagem..." 
                       @bind="buscaTexto"
                       @onkeydown="@(async (e) => { if (e.Key == "Enter") await FiltrarPorTexto(); })" />
            </div>

            <div class="filtro-item filtro-actions">
                <button class="btn-filtro btn-filtrar" @onclick="FiltrarPorTexto">
                    <i class="fa-solid fa-filter"></i> Filtrar
                </button>
                <button class="btn-filtro btn-limpar" @onclick="LimparFiltros">
                    <i class="fa-solid fa-times"></i> Limpar
                </button>
            </div>
        </div>
    </div>

    <!-- Status e Estatísticas -->
    <div class="stats-card">
        <div class="stats-row">
            <button type="button" 
                    class="stat-box stat-total @(filtroAtivo == TipoFiltroLog.Todos ? "filtro-ativo" : "")"
                    @onclick="() => SelecionarFiltro(TipoFiltroLog.Todos)">
                <div class="stat-icon">
                    <i class="fa-duotone fa-list"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-value">@linhasLogs.Count</div>
                    <div class="stat-label">Total de Logs</div>
                </div>
            </button>

            <button type="button"
                    class="stat-box stat-erros @(filtroAtivo == TipoFiltroLog.Erros ? "filtro-ativo" : "")"
                    @onclick="() => SelecionarFiltro(TipoFiltroLog.Erros)">
                <div class="stat-icon">
                    <i class="fa-duotone fa-circle-xmark"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-value">@linhasLogs.Count(l => l.Contains("[ERROR"))</div>
                    <div class="stat-label">Erros</div>
                </div>
            </button>

            <button type="button"
                    class="stat-box stat-avisos @(filtroAtivo == TipoFiltroLog.Avisos ? "filtro-ativo" : "")"
                    @onclick="() => SelecionarFiltro(TipoFiltroLog.Avisos)">
                <div class="stat-icon">
                    <i class="fa-duotone fa-triangle-exclamation"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-value">@linhasLogs.Count(l => l.Contains("[WARN"))</div>
                    <div class="stat-label">Avisos</div>
                </div>
            </button>

            <button type="button"
                    class="stat-box stat-info @(filtroAtivo == TipoFiltroLog.Informacoes ? "filtro-ativo" : "")"
                    @onclick="() => SelecionarFiltro(TipoFiltroLog.Informacoes)">
                <div class="stat-icon">
                    <i class="fa-duotone fa-circle-info"></i>
                </div>
                <div class="stat-details">
                    <div class="stat-value">@linhasLogs.Count(l => l.Contains("[INFO") || l.Contains("[USER"))</div>
                    <div class="stat-label">Informações</div>
                </div>
            </button>
        </div>

        @if (linhasLogs.Any())
        {
            <button class="btn-limpar-logs" @onclick="LimparTodosOsLogs">
                <i class="fa-solid fa-trash"></i> Limpar Todos os Logs
            </button>
        }
    </div>

    <!-- Lista de Logs -->
    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border text-danger" role="status" style="width: 3rem; height: 3rem;">
                <span class="visually-hidden">Carregando...</span>
            </div>
            <p>Carregando logs...</p>
        </div>
    }
    else if (!linhasFiltradas.Any())
    {
        <div class="empty-state">
            <i class="fa-duotone fa-check-circle fa-4x"></i>
            <h4>Nenhum Log Encontrado</h4>
            <p>@(linhasLogs.Any() ? "Nenhum log corresponde aos filtros aplicados." : "Não há logs registrados no momento.")</p>
        </div>
    }
    else
    {
        <div class="logs-list">
            @foreach (var log in linhasFiltradas)
            {
                var isError = log.Contains("[ERROR");
                var isWarn = log.Contains("[WARN");
                var isUser = log.Contains("[USER");
                var tipoLog = isError ? "error" : isWarn ? "warning" : isUser ? "useraction" : "info";
                
                <div class="log-item log-@tipoLog">
                    <div class="log-content">
                        <pre>@log</pre>
                    </div>
                </div>
            }
        </div>
    }
</div>

