@code {
    private enum TipoFiltroLog { Todos, Erros, Avisos, Informacoes }
    
    private bool isLoading = true;
    private string logsTextoCompleto = "";
    private List<string> linhasLogs = new();
    private List<string> linhasFiltradas = new();

    // Filtros
    private TipoFiltroLog filtroAtivo = TipoFiltroLog.Todos;
    private string tipoFiltro = "";
    private string buscaTexto = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            await CarregarLogs();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task CarregarLogs()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            logsTextoCompleto = MauiProgram.ReadAllLogs();
            linhasLogs = logsTextoCompleto.Split('\n', StringSplitOptions.RemoveEmptyEntries).ToList();
            AplicarFiltros();
        }
        catch (Exception ex)
        {
            await Alerta.Erro("Erro", $"Erro ao carregar logs: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SelecionarFiltro(TipoFiltroLog novoFiltro)
    {
        filtroAtivo = novoFiltro;
        buscaTexto = ""; // Limpa busca de texto ao trocar filtro de tipo
        AplicarFiltros();
    }

    private async Task FiltrarPorTexto()
    {
        await Task.Run(() => AplicarFiltros());
        StateHasChanged();
    }

    private void AplicarFiltros()
    {
        // Primeiro aplica filtro de tipo
        linhasFiltradas = filtroAtivo switch
        {
            TipoFiltroLog.Erros => linhasLogs.Where(l => l.Contains("[ERROR")).ToList(),
            TipoFiltroLog.Avisos => linhasLogs.Where(l => l.Contains("[WARN")).ToList(),
            TipoFiltroLog.Informacoes => linhasLogs.Where(l => l.Contains("[INFO") || l.Contains("[USER")).ToList(),
            _ => linhasLogs.ToList()
        };

        // Depois aplica filtro de texto, se houver
        if (!string.IsNullOrEmpty(buscaTexto))
        {
            linhasFiltradas = linhasFiltradas.Where(linha => 
                linha.Contains(buscaTexto, StringComparison.OrdinalIgnoreCase)
            ).ToList();
        }

        // Inverte para exibir mais novos primeiro
        linhasFiltradas.Reverse();
        
        StateHasChanged();
    }

    private void LimparFiltros()
    {
        filtroAtivo = TipoFiltroLog.Todos;
        tipoFiltro = "";
        buscaTexto = "";
        AplicarFiltros();
    }

    private async Task LimparTodosOsLogs()
    {
        try
        {
            MauiProgram.ClearLogs();
            await Alerta.Sucesso("Sucesso", "Todos os logs foram limpos!");
            await CarregarLogs();
        }
        catch (Exception ex)
        {
            await Alerta.Erro("Erro", $"Erro ao limpar logs: {ex.Message}");
        }
    }

    private void VoltarParaHome()
    {
        Navigation.NavigateTo("/");
    }

    public void Dispose()
    {
    }
}
