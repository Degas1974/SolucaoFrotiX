@code {
    private bool carregando = true;
    private List<ViewViagemVistoria> vistorias = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await CarregarVistorias();
        }
        catch (Exception ex)
        {
            await Alerta.TratamentoErroComLinha("Erro ao inicializar página", ex);
        }
    }

    private async Task CarregarVistorias()
    {
        try
        {
            carregando = true;
            StateHasChanged();

            vistorias = await ViagemService.ObterVistoriasAbertasAsync();

            // Ordena por data mais recente
            vistorias = vistorias
                .OrderByDescending(v => v.DataInicial)
                .ThenByDescending(v => v.HoraInicio)
                .ToList();
        }
        catch (Exception ex)
        {
            await Alerta.TratamentoErroComLinha("Erro ao carregar vistorias", ex);
        }
        finally
        {
            carregando = false;
            StateHasChanged();
        }
    }

    private void AbrirEdicao(Guid viagemId)
    {
        try
        {
            Navigation.NavigateTo($"/editarvistoria/{viagemId}");
        }
        catch (Exception ex)
        {
            Logger?.Error($"Erro ao navegar para edição da vistoria {viagemId}", ex);
        }
    }

    private void VoltarParaHome()
    {
        try
        {
            Navigation.NavigateTo("/");
        }
        catch (Exception ex)
        {
            Logger?.Error("Erro ao voltar para Home", ex);
        }
    }
}
