@page "/vistoriasabertas"
@using FrotiX.Mobile.Shared.Models
@using FrotiX.Mobile.Shared.Services.IServices
@inject IViagemService ViagemService
@inject ILogService Logger
@inject NavigationManager Navigation
@inject AlertaJs Alerta

<PageTitle>Vistorias Abertas - FrotiX</PageTitle>

<!-- Botão Voltar Laranja Redondo -->
<button type="button" class="btn-voltar-laranja" @onclick="VoltarParaHome">
    <i class="fa-solid fa-arrow-left"></i>
</button>

@if (carregando)
{
    <div class="loading-container">
        <div class="spinner-border text-primary" role="status" style="width: 4rem; height: 4rem;">
            <span class="visually-hidden">Carregando...</span>
        </div>
        <p style="font-size: 1.4rem; margin-top: 20px;">Carregando vistorias...</p>
    </div>
}
else
{
    <div class="lista-container">
        <!-- Header -->
        <div class="page-header">
            <div class="header-left">
                <i class="fa-solid fa-folder-open"></i>
                <div>
                    <h2>Vistorias Abertas</h2>
                    <p>Selecione para visualizar ou editar</p>
                </div>
            </div>
            <div class="header-right">
                <button type="button" class="btn-atualizar" @onclick="CarregarVistorias">
                    <i class="fa-solid fa-arrows-rotate"></i>
                    Atualizar
                </button>
            </div>
        </div>

        @if (vistorias == null || vistorias.Count == 0)
        {
            <div class="empty-state">
                <i class="fa-duotone fa-folder-open"></i>
                <h3>Nenhuma vistoria aberta</h3>
                <p>Não há vistorias em andamento no momento.</p>
            </div>
        }
        else
        {
            <div class="lista-vistorias">
                @foreach (var vistoria in vistorias)
                {
                    <div class="card-vistoria" @onclick="() => AbrirEdicao(vistoria.ViagemId)">
                        <div class="card-icon">
                            <i class="fa-solid fa-car"></i>
                        </div>
                        <div class="card-content">
                            <div class="card-header-row">
                                <div class="card-title">@vistoria.VeiculoCompleto</div>
                                @if (vistoria.NoFichaVistoria.HasValue)
                                {
                                    <div class="card-ficha">
                                        <i class="fa-solid fa-hashtag"></i> @vistoria.NoFichaVistoria.Value
                                    </div>
                                }
                            </div>
                            <div class="card-info">
                                <span><i class="fa-solid fa-user"></i> @vistoria.MotoristaCondutor</span>
                                <span><i class="fa-solid fa-calendar"></i> @(vistoria.DataInicial?.ToString("dd/MM/yyyy") ?? "-")</span>
                                <span><i class="fa-solid fa-clock"></i> @(vistoria.HoraInicio?.ToString("HH:mm") ?? "-")</span>
                            </div>
                            <div class="card-finalidade">
                                <i class="fa-solid fa-bullseye"></i> @(vistoria.Finalidade ?? "-")
                            </div>
                        </div>
                        <div class="card-arrow">
                            <i class="fa-solid fa-chevron-right"></i>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
}

