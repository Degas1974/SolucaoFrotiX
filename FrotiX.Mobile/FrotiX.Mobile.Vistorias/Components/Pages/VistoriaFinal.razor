    private async Task SalvarVistoriaFinal()
    {
        try
        {
            Logger.OperationStart("SalvarVistoriaFinal");
            Logger.Info($"Iniciando fechamento da vistoria {viagemAtual.ViagemId}");

            // Validação dos campos obrigatórios
            var camposFaltando = new List<string>();

            if (!viagemAtual.DataFinal.HasValue)
                camposFaltando.Add("Data Final");

            if (!viagemAtual.HoraFim.HasValue)
                camposFaltando.Add("Hora Final");

            if (!viagemAtual.KmFinal.HasValue || viagemAtual.KmFinal <= 0)
                camposFaltando.Add("KM Final");

            if (string.IsNullOrEmpty(viagemAtual.NivelCombustivelFinal))
                camposFaltando.Add("Combustível");

            // Verifica se a rubrica foi preenchida
            bool rubricaVazia = signaturePadFinal == null || await signaturePadFinal.IsEmptyAsync();
            if (rubricaVazia)
                camposFaltando.Add("Rubrica Final");

            if (camposFaltando.Count > 0)
            {
                Logger.Warning($"Validação falhou - campos faltando: {string.Join(", ", camposFaltando)}");
                await Alerta.Erro("Campos Obrigatórios", $"Preencha os campos: {string.Join(", ", camposFaltando)}");
                return;
            }

            Logger.Info("Validação OK - capturando rubrica...");

            // Captura a rubrica
            viagemAtual.RubricaFinal = await signaturePadFinal.GetSignatureAsync();

            // CORREÇÃO: Normalizar hora para formato HH:mm (zerar segundos e milissegundos) antes de gravar
            if (viagemAtual.HoraFim.HasValue)
            {
                var h = viagemAtual.HoraFim.Value;
                viagemAtual.HoraFim = new DateTime(h.Year, h.Month, h.Day, h.Hour, h.Minute, 0);
            }

            viagemAtual.Status = "Realizada";
            viagemAtual.StatusAgendamento = false;
            viagemAtual.VistoriadorFinalId = vistoriadorSelecionadoId;
            viagemAtual.UsuarioIdFinalizacao = vistoriadorSelecionadoId;
            viagemAtual.DataFinalizacao = DateTime.Now;

            Logger.Info($"Dados preparados - ViagemId: {viagemAtual.ViagemId}, Status: {viagemAtual.Status}");
            Logger.Info($"DataFinal: {viagemAtual.DataFinal}, HoraFim: {viagemAtual.HoraFim}, KmFinal: {viagemAtual.KmFinal}");

            Logger.Info("Chamando API para atualizar vistoria...");
            bool sucesso = await vistoriaService.AtualizarVistoriaAsync(viagemAtual);

            if (sucesso)
            {
                Logger.OperationSuccess("SalvarVistoriaFinal", "Vistoria atualizada com sucesso");

                // Gravar ocorrências na tabela OcorrenciaViagem (após viagem salva com sucesso)
                if (OcorrenciasLocais.Count > 0 && viagemAtual.VeiculoId.HasValue)
                {
                    Logger.Info($"Salvando {OcorrenciasLocais.Count} ocorrências...");
                    foreach (var ocorrencia in OcorrenciasLocais)
                    {
                        var ocorrenciaDto = new CriarOcorrenciasDTO
                        {
                            ViagemId = viagemAtual.ViagemId,
                            VeiculoId = viagemAtual.VeiculoId.Value,
                            MotoristaId = viagemAtual.MotoristaId,
                            Ocorrencias = new List<OcorrenciaItemDTO>
                            {
                                new OcorrenciaItemDTO
                                {
                                    Resumo = ocorrencia.Resumo,
                                    Descricao = ocorrencia.Descricao
                                }
                            }
                        };

                        var resultOc = await OcorrenciaService.CriarOcorrenciasMultiplasAsync(ocorrenciaDto);
                        if (resultOc.Success)
                        {
                            Logger.Info($"Ocorrência '{ocorrencia.Resumo}' criada");
                        }
                        else
                        {
                            Logger.Warning($"Falha ao criar ocorrência '{ocorrencia.Resumo}'");
                        }
                    }
                }

                LimparMemoria();
                await Alerta.Sucesso("Sucesso", "Vistoria fechada com sucesso!");
                
                GC.Collect();
                GC.WaitForPendingFinalizers();

                OcorrenciasLocais = new();
                vistoriadorSelecionadoId = null;
                VoltarParaLista();
                await CarregarVistoriasAbertas();
            }
            else
            {
                // Captura detalhes do erro da API
                var erroApi = RelayApiService.UltimoErro ?? "Erro desconhecido";
                var respostaApi = RelayApiService.UltimaRespostaErro ?? "Sem detalhes";
                
                Logger.Error($"Falha ao fechar vistoria: {erroApi}");
                Logger.Error($"Resposta da API: {respostaApi}");
                
                await Alerta.Erro("Erro ao Fechar Vistoria", $"{erroApi}\n\nDetalhes: {respostaApi}");
            }
        }
        catch (Exception ex)
        {
            Logger.OperationFailed("SalvarVistoriaFinal", ex);
            await Alerta.TratamentoErroComLinha("Erro ao salvar vistoria final", ex);
        }
    }

