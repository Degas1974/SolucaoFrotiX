    <script>
        /****************************************************************************************
         * ‚ö° FUN√á√ÉO: trimTransparentPNG
         * --------------------------------------------------------------------------------------
         * üéØ OBJETIVO     : Remove pixels transparentes das bordas de uma imagem PNG, retornando
         *                   um canvas contendo apenas a √°rea vis√≠vel da imagem (crop autom√°tico
         *                   de transpar√™ncia).
         *
         * üì• ENTRADAS     : [HTMLImageElement] img - Elemento de imagem carregado.
         *
         * üì§ SA√çDAS       : [HTMLCanvasElement] - Canvas contendo a imagem recortada sem bordas
         *                   transparentes.
         *
         * üîó CHAMADA POR  : Fun√ß√£o an√¥nima no evento window.load (linha ~133).
         *
         * üîÑ CHAMA        : Canvas API nativa (getImageData, putImageData, drawImage).
         *
         * üì¶ DEPEND√äNCIAS : Canvas API (HTML5).
         ****************************************************************************************/
        function trimTransparentPNG(img) {
          const canvas = document.createElement('canvas');
          const ctx = canvas.getContext('2d');
          canvas.width = img.width;
          canvas.height = img.height;
          ctx.drawImage(img, 0, 0);

          const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
          const pixels = imageData.data;
          const w = canvas.width;
          const h = canvas.height;

          let top = null, bottom = null, left = null, right = null;

          // [DOC] Varre todos os pixels da imagem para encontrar bordas n√£o-transparentes
          for (let y = 0; y < h; y++) {
            for (let x = 0; x < w; x++) {
              const alpha = pixels[(y * w + x) * 4 + 3]; // Canal alpha (transpar√™ncia)
              if (alpha > 0) {
                if (top === null) top = y;
                bottom = y;
                if (left === null || x < left) left = x;
                if (right === null || x > right) right = x;
              }
            }
          }

          // [DOC] Calcula dimens√µes da √°rea vis√≠vel (sem bordas transparentes)
          const trimmedWidth = right - left + 1;
          const trimmedHeight = bottom - top + 1;
          const trimmedData = ctx.getImageData(left, top, trimmedWidth, trimmedHeight);

          // [DOC] Cria novo canvas com dimens√µes exatas da √°rea vis√≠vel
          const resultCanvas = document.createElement('canvas');
          resultCanvas.width = trimmedWidth;
          resultCanvas.height = trimmedHeight;
          resultCanvas.getContext('2d').putImageData(trimmedData, 0, 0);

          return resultCanvas;
        }
    </script>

    <script>
        /****************************************************************************************
         * ‚ö° FUN√á√ÉO: window.load Event Listener (Processamento de Logo)
         * --------------------------------------------------------------------------------------
         * üéØ OBJETIVO     : Processar o logo FrotiX removendo transpar√™ncias e redimensionando
         *                   para 800px de largura (mantendo propor√ß√£o), garantindo visual
         *                   limpo e consistente na tela de login.
         *
         * üì• ENTRADAS     : Nenhuma (captura elemento #logoOriginal do DOM).
         *
         * üì§ SA√çDAS       : Substitui elemento <img> original por <canvas> processado.
         *
         * üîó CHAMADA POR  : Evento 'load' do navegador (window.addEventListener).
         *
         * üîÑ CHAMA        : trimTransparentPNG(), Canvas API (drawImage, replaceWith).
         *
         * üì¶ DEPEND√äNCIAS : Canvas API (HTML5), trimTransparentPNG().
         ****************************************************************************************/
        window.addEventListener('load', () => {
            const img = document.getElementById('logoOriginal');
            const proxyImg = new Image();

            proxyImg.onload = () => {
            // [DOC] Largura alvo de 800px para padroniza√ß√£o visual
            const targetWidth = 800;

            // [DOC] Remove bordas transparentes primeiro, depois calcula propor√ß√£o
            const trimmed = trimTransparentPNG(proxyImg);
            const aspectRatio = trimmed.height / trimmed.width;
            const targetHeight = Math.round(targetWidth * aspectRatio);

            // [DOC] Redimensiona canvas cortado para dimens√µes finais (800px width, altura proporcional)
            const finalCanvas = document.createElement('canvas');
            finalCanvas.width = targetWidth;
            finalCanvas.height = targetHeight;
            finalCanvas.getContext('2d').drawImage(trimmed, 0, 0, targetWidth, targetHeight);

            // [DOC] Substitui <img> original pelo <canvas> processado no DOM
            img.replaceWith(finalCanvas);
            };

            proxyImg.src = img.src;
        });
    </script>

