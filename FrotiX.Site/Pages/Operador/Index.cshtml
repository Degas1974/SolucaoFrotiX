    ViewData["PageName"]  = "operador_index";
    ViewData["Heading"]   = "<i class='fa-duotone fa-user-tie'></i> Cadastros: <span class='fw-300'>Operadores</span>";
    ViewData["Category1"] = "Cadastros";
    ViewData["PageIcon"]  = "fa-duotone fa-user-tie";
}

@section HeadBlock {
