@section ScriptsBlock {
    <script src="~/js/cadastros/encarregado.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function () {
            try {
                // Handler delegado para bot√£o de foto
                $(document).on('click', '.btn-foto', function(e) {
                    try {
                        e.preventDefault();
                        e.stopPropagation();
                        
                        var encarregadoId = $(this).data('id');
                        var nomeEncarregado = $(this).closest('tr').find('td:eq(0)').text();
                        
                        // Limpar imagem anterior
                        $('#imgViewer').attr('src', '/Images/barbudo.jpg');
                        $('#txtTituloFoto').text('Carregando...');
                        
                        // Abrir modal
                        var modal = bootstrap.Modal.getOrCreateInstance(document.getElementById('modalFoto'));
                        modal.show();
                        
                        // Carregar foto
                        $.ajax({
                            type: "GET",
                            url: "/api/Encarregado/PegaFotoModal",
                            data: { id: encarregadoId },
                            success: function (res) {
                                try {
                                    if (res === false || !res) {
                                        $('#txtTituloFoto').html('Encarregado sem Foto: <b>' + nomeEncarregado + '</b>');
                                        $('#imgViewer').attr('src', '/Images/barbudo.jpg');
                                    } else {
                                        $('#txtTituloFoto').html('Foto: <b>' + nomeEncarregado + '</b>');
                                        $('#imgViewer').attr('src', 'data:image/jpg;base64,' + res);
                                    }
                                } catch (error) {
                                    Alerta.TratamentoErroComLinha("Encarregado/Index.cshtml", "PegaFotoModal.success", error);
                                }
                            },
                            error: function (err) {
                                try {
                                    console.error("Erro ao carregar foto:", err);
                                    $('#txtTituloFoto').text('Erro ao carregar foto');
                                } catch (error) {
                                    Alerta.TratamentoErroComLinha("Encarregado/Index.cshtml", "PegaFotoModal.error", error);
                                }
                            }
                        });
                    } catch (error) {
                        Alerta.TratamentoErroComLinha("Encarregado/Index.cshtml", "btn-foto.click", error);
                    }
                });

                // Limpar ao fechar modal
                $('#modalFoto').on('hide.bs.modal', function () {
                    try {
                        $('#imgViewer').attr('src', '/Images/barbudo.jpg');
                        $('#txtTituloFoto').text('Foto do Encarregado');
                    } catch (error) {
                        Alerta.TratamentoErroComLinha("Encarregado/Index.cshtml", "modalFoto.hide", error);
                    }
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha("Encarregado/Index.cshtml", "document.ready", error);
            }
        });
    </script>
}
