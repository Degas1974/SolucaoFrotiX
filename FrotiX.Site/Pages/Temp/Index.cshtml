@{
    ViewData["Title"] = "Teste Kendo Grid";
    ViewData["PageName"] = "temp_index";
    ViewData["Heading"] = "<i class='fa-duotone fa-flask'></i> Teste: <span class='fw-300'>Kendo UI Grid</span>";
    ViewData["Category1"] = "Desenvolvimento";
    ViewData["PageIcon"] = "fa-duotone fa-flask";
}

@section HeadBlock {
    <!-- Include Kendo UI CSS -->
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.1.117/styles/kendo.common.min.css">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.1.117/styles/kendo.default.min.css">
}

<!-- Your Grid will be rendered here -->
<div id="grid"></div>

@section ScriptsBlock {
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <!-- Include Kendo UI JavaScript -->
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/cultures/kendo.culture.pt-BR.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.1.117/js/messages/kendo.messages.pt-BR.min.js"></script>
    <script>
        try {
            if (window.kendo && kendo.culture) {
                kendo.culture("pt-BR");
            }
        } catch (error) {
            console.warn("Kendo pt-BR: falha ao aplicar cultura.", error);
        }
    </script>

    <script>
        // Your JavaScript code will go here
        var dataSource = new kendo.data.DataSource({
            data: [
                { ProductID: 1, ProductName: "Product 1", Category: "Category 1" },
                { ProductID: 2, ProductName: "Product 2", Category: "Category 2" },
                // Add more data as needed
            ],
        });

        $("#grid").kendoGrid({
            dataSource: dataSource,
            columns: [
                { field: "ProductID", title: "Product ID" },
                { field: "ProductName", title: "Product Name" },
                {
                    field: "Category",
                    title: "Category",
                    editor: function (container, options)
                    {
                        // Create the combo box
                        $("<input>").attr("name", options.field).appendTo(container).kendoComboBox({
                            dataSource: ["Category 1", "Category 2", "Category 3"],
                        });
                    },
                },
            ],
            editable: "inline", // Enable inline editing
        });
    </script>
}
