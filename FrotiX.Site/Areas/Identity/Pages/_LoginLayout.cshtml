    <script>
        /****************************************************************************************
         * âš¡ FUNÃ‡ÃƒO: trimTransparentPNG
         * --------------------------------------------------------------------------------------
         * ğŸ¯ OBJETIVO     : Remove pixels transparentes das bordas de uma imagem PNG, retornando
         *                   um canvas contendo apenas a Ã¡rea visÃ­vel da imagem (crop automÃ¡tico
         *                   de transparÃªncia).
         *
         * ğŸ“¥ ENTRADAS     : [HTMLImageElement] img - Elemento de imagem carregado.
         *
         * ğŸ“¤ SAÃDAS       : [HTMLCanvasElement] - Canvas contendo a imagem recortada sem bordas
         *                   transparentes.
         *
         * ğŸ”— CHAMADA POR  : FunÃ§Ã£o anÃ´nima no evento window.load (linha ~133).
         *
         * ğŸ”„ CHAMA        : Canvas API nativa (getImageData, putImageData, drawImage).
         *
         * ğŸ“¦ DEPENDÃŠNCIAS : Canvas API (HTML5).
         ****************************************************************************************/
        function trimTransparentPNG(img) {
          const canvas = document.createElement('canvas');
          const ctx = canvas.getContext('2d');
          canvas.width = img.width;
          canvas.height = img.height;
          ctx.drawImage(img, 0, 0);

          const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
          const pixels = imageData.data;
          const w = canvas.width;
          const h = canvas.height;

          let top = null, bottom = null, left = null, right = null;

          // [DOC] Varre todos os pixels da imagem para encontrar bordas nÃ£o-transparentes
          for (let y = 0; y < h; y++) {
            for (let x = 0; x < w; x++) {
              const alpha = pixels[(y * w + x) * 4 + 3]; // Canal alpha (transparÃªncia)
              if (alpha > 0) {
                if (top === null) top = y;
                bottom = y;
                if (left === null || x < left) left = x;
                if (right === null || x > right) right = x;
              }
            }
          }

          // [DOC] Calcula dimensÃµes da Ã¡rea visÃ­vel (sem bordas transparentes)
          const trimmedWidth = right - left + 1;
          const trimmedHeight = bottom - top + 1;
          const trimmedData = ctx.getImageData(left, top, trimmedWidth, trimmedHeight);

          // [DOC] Cria novo canvas com dimensÃµes exatas da Ã¡rea visÃ­vel
          const resultCanvas = document.createElement('canvas');
          resultCanvas.width = trimmedWidth;
          resultCanvas.height = trimmedHeight;
          resultCanvas.getContext('2d').putImageData(trimmedData, 0, 0);

          return resultCanvas;
        }
    </script>

    <script>
        /****************************************************************************************
         * âš¡ FUNÃ‡ÃƒO: window.load Event Listener (Processamento de Logo)
         * --------------------------------------------------------------------------------------
         * ğŸ¯ OBJETIVO     : Processar o logo FrotiX removendo transparÃªncias e redimensionando
         *                   para 800px de largura (mantendo proporÃ§Ã£o), garantindo visual
         *                   limpo e consistente na tela de login.
         *
         * ğŸ“¥ ENTRADAS     : Nenhuma (captura elemento #logoOriginal do DOM).
         *
         * ğŸ“¤ SAÃDAS       : Substitui elemento <img> original por <canvas> processado.
         *
         * ğŸ”— CHAMADA POR  : Evento 'load' do navegador (window.addEventListener).
         *
         * ğŸ”„ CHAMA        : trimTransparentPNG(), Canvas API (drawImage, replaceWith).
         *
         * ğŸ“¦ DEPENDÃŠNCIAS : Canvas API (HTML5), trimTransparentPNG().
         ****************************************************************************************/
        window.addEventListener('load', () => {
            const img = document.getElementById('logoOriginal');
            const proxyImg = new Image();

            proxyImg.onload = () => {
            // [DOC] Largura alvo de 800px para padronizaÃ§Ã£o visual
            const targetWidth = 800;

            // [DOC] Remove bordas transparentes primeiro, depois calcula proporÃ§Ã£o
            const trimmed = trimTransparentPNG(proxyImg);
            const aspectRatio = trimmed.height / trimmed.width;
            const targetHeight = Math.round(targetWidth * aspectRatio);

            // [DOC] Redimensiona canvas cortado para dimensÃµes finais (800px width, altura proporcional)
            const finalCanvas = document.createElement('canvas');
            finalCanvas.width = targetWidth;
            finalCanvas.height = targetHeight;
            finalCanvas.getContext('2d').drawImage(trimmed, 0, 0, targetWidth, targetHeight);

            // [DOC] Substitui <img> original pelo <canvas> processado no DOM
            img.replaceWith(finalCanvas);
            };

            proxyImg.src = img.src;
        });
    </script>

