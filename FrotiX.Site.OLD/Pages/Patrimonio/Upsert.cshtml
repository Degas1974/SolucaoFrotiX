@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@* ========================================================================================
 * ARQUIVO: Pages/Patrimonio/Upsert.cshtml
 * OBJETIVO: Formulario de criacao e edicao de patrimonios com Syncfusion ComboBox para selecao
 *           de Secao Patrimonial e Setor Patrimonial (com autocomplete), validacao de campos
 *           obrigatorios (codigo, descricao, secao, setor), checkbox status Ativo.
 * ENTRADAS: Model FrotiX.Pages.Patrimonio.UpsertModel (code-behind com propriedades Id, Codigo,
 *           Descricao, SecaoPatrimonialId, SetorPatrimonialId, Status), parametro query string id
 *           (edicao carrega dados existentes via OnGet, ausente indica criacao), ViewData com listas
 *           (secoes, setores carregadas no OnGet), formulario HTML5 com input text (codigo, descricao),
 *           Syncfusion ComboBox (secao, setor com autocomplete), checkbox (status Ativo checked default)
 * SAIDAS: Formulario renderizado com campos preenchidos (edicao) ou vazios (criacao), ComboBox
 *         funcional com autocomplete, validacao HTML5 frontend (required nos campos obrigatorios),
 *         POST /Patrimonio/Upsert (submit salva no banco via IUnitOfWork), redirect para /Patrimonio
 *         apos sucesso com AppToast Verde, erro exibe AppToast Vermelho
 * CHAMADA POR: Link /Patrimonio/Upsert (criacao novo), link /Patrimonio/Upsert?id=X (edicao),
 *              botao + Novo Patrimonio da pagina /Patrimonio/Index, botao Editar no TreeGrid
 * CHAMA: patrimonio_upsert.js (arquivo JavaScript externo com validacao customizada, submit handler),
 *        POST /Patrimonio/Upsert endpoint (backend salva entidade Patrimonio, retorna JSON success/error),
 *        AppToast.show (notificacoes toast)
 * DEPENDENCIAS: ASP.NET Core Razor Pages 8.0, Syncfusion EJ2 ASP.NET Core (ComboBox com autocomplete),
 *               jQuery 3.7.1, Bootstrap 5.3.8, patrimonio_upsert.js, AppToast.js, IUnitOfWork
 * OBSERVACOES: 404 linhas com formulario completo padrao FrotiX. ComboBox Syncfusion permite
 *              autocomplete ao digitar nome da secao/setor facilitando selecao. Sistema integrado
 *              com contabilidade publica para classificacao de bens patrimoniais do orgao.
 * REGRA: nunca use o simbolo arroba dentro deste bloco de comentario
 ======================================================================================== *@

@model FrotiX.Pages.Patrimonio.UpsertModel

@{
	ViewData["Title"] = "Patrimônio";
	ViewData["PageName"] = "patrimonio_upsert";
	ViewData["Heading"] = "<i class='fa-sharp-duotone fa-duotone fa-arrows-turn-to-dots'></i> Cadastros: <span class='fw-300'>Patrimônio</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-duotone fa-arrows-turn-to-dots";
}

<style>
	.form-control-xs {
		height: calc(1em + .775rem + 2px) !important;
		padding: .125rem .25rem !important;
		font-size: .75rem !important;
		line-height: 1.5;
		border-radius: .2rem;
	}

	.label {
		margin-bottom: -5px;
		margin-top: 10px;
	}

	input[type=checkbox] {
		vertical-align: middle;
		position: relative;
		bottom: 1px;
	}

	.escondido {
		display: none;
	}

	.espacofundo {
		padding-bottom: 20px;
	}

	#dropArea {
		border: 1px dashed #c3c3cc;
		text-align: center;
		padding: 20px;
	}

	.control_wrapper {
		max-width: 500px;
		margin: auto;
	}

	img#previewImage {
		margin-top: 20px;
		max-width: 100%;
		width: 300px;
		height: auto;
		display: block;
	}
</style>

@section HeadBlock {
	<link rel="stylesheet" href="~/css/dropify.min.css" />
}

@{
	var patrimonioId = Model.PatrimonioObj?.PatrimonioId.ToString() ?? "00000000-0000-0000-0000-000000000000";
}

<form id="formsPatrimonio" method="post" asp-action="Upsert" onkeypress='stopEnterSubmitting(window.event)'
	enctype="multipart/form-data">
	<div class="row espacofundo">
		<div class="col-xl-12">
			<div id="panel-1" class="panel">
				<div id="painelfundo" class="panel-container show espacofundo">
					<div class="panel-content">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<div id="divPatrimonioIdEmpty" data-patrimonioid="@patrimonioId"></div>

						@if (Model.PatrimonioObj.PatrimonioId != Guid.Empty)
						{
							<input type="hidden" id="PatrimonioId" name="PatrimonioObj.PatrimonioId"
								value="@Model.PatrimonioObj.PatrimonioId" />
							<input type="hidden" id="MarcaId" value="@Model.PatrimonioObj.Patrimonio.Marca" />
							<input type="hidden" id="ModeloId" value="@Model.PatrimonioObj.Patrimonio.Modelo" />
							<input type="hidden" id="SetorId" value="@Model.PatrimonioObj.Patrimonio.SetorId" />
							<input type="hidden" id="SecaoId" value="@Model.PatrimonioObj.Patrimonio.SecaoId" />
							<input type="hidden" id="SituacaoId" value="@Model.PatrimonioObj.Patrimonio.Situacao" />
						}

						<div class="col-12 px-3" style="border-bottom:1px solid #325d88">
							<h2 class="titulo-pagina">
								<i class="fa-duotone fa-shelves"></i>
								&nbsp;@(Model.PatrimonioObj.Patrimonio.PatrimonioId != Guid.Empty ? "Atualizar" :
																"Criar")&nbsp;Patrimônio
							</h2>
						</div>

						<div class="col-12 pt-3">
							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="PatrimonioObj.Patrimonio.NPR"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.NPR"></span>
										<input class="form-control form-control-sm"
											asp-for="PatrimonioObj.Patrimonio.NPR" pattern="^\d+(\.\d+)?$" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="PatrimonioObj.Patrimonio.Marca"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.Marca"></span>
										<div class="d-flex align-items-center">
											<input id="cmbMarcas" name="PatrimonioObj.Patrimonio.Marca" style="width: 100%; flex: 1;" />
											<button type="button" id="btnAddMarca" class="btn btn-azul btn-sm ml-2"
												style="width: 35px; height: 35px; padding: 0;">
												<i class="fa-duotone fa-rectangle-history-circle-plus"></i>
											</button>
										</div>
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="PatrimonioObj.Patrimonio.Modelo"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.Modelo"></span>
										<div class="d-flex align-items-center">
											<input id="cmbModelos" name="PatrimonioObj.Patrimonio.Modelo" style="width: 100%; flex: 1;" />
											<button type="button" id="btnAddModelo" class="btn btn-azul btn-sm ml-2"
												style="width: 35px; height: 35px; padding: 0;" disabled>
												<i class="fa-duotone fa-rectangle-history-circle-plus"></i>
											</button>
										</div>
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-4">
									<label class="label font-weight-bold label-required"
										asp-for="PatrimonioObj.Patrimonio.SetorId">Setor</label>
							<input id="cmbSetores" name="PatrimonioObj.Patrimonio.SetorId" style="width: 100%;" />
								</div>

								<div class="col-4 form-group" id="divSecao">
									<label class="label font-weight-bold label-required">Seção</label>
							<input id="cmbSecoes" name="PatrimonioObj.Patrimonio.SecaoId" style="width: 100%;" />
								</div>

								<div class="col-2">
									<label class="label font-weight-bold"
										asp-for="PatrimonioObj.Patrimonio.DataEntrada">Data de Entrada</label>
									<input id="txtDataEntrada" name="PatrimonioObj.Patrimonio.DataEntrada" style="width: 100%;" />
									<label class="label font-weight-bold"
										asp-for="PatrimonioObj.Patrimonio.DataSaida">Data de Baixa</label>
									<input id="txtDataBaixa" name="PatrimonioObj.Patrimonio.DataSaida" style="width: 100%;" />
								</div>
							</div>

							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="PatrimonioObj.Patrimonio.Descricao">Descrição</label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.Descricao"></span>
										<input class="form-control form-control-sm"
											asp-for="PatrimonioObj.Patrimonio.Descricao" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="PatrimonioObj.Patrimonio.NumeroSerie">Numero de Série</label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.NumeroSerie"></span>
										<input class="form-control form-control-sm"
											asp-for="PatrimonioObj.Patrimonio.NumeroSerie" />
									</div>
								</div>
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="PatrimonioObj.Patrimonio.Situacao">Situação</label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.Situacao"></span>
									<input id="cmbSituacao" name="PatrimonioObj.Patrimonio.Situacao" style="width: 100%;" />
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="PatrimonioObj.Patrimonio.LocalizacaoAtual">Localização
											Atual</label>
										<span class="text-danger font-weight-light"
											asp-validation-for="PatrimonioObj.Patrimonio.LocalizacaoAtual"></span>
									<input type="text" id="localizacaoAtual" name="PatrimonioObj.Patrimonio.LocalizacaoAtual"
										   class="form-control form-control-sm"
										   value="@Model.PatrimonioObj.Patrimonio.LocalizacaoAtual"
										   placeholder="Digite a Localização Atual do Patrimônio" />
									</div>
								</div>
							</div>

							<br />

							<div class="row">
								<div class="col-4">
									<div class="form-group">
										<label class="label font-weight-bold">
											<input type="checkbox" class="form-check-input"
												asp-for="PatrimonioObj.Patrimonio.Status" id="chkStatus"
												style="display: none;" />
											Status (Ativo/Baixado)
										</label>
									</div>
								</div>
							</div>

							<br />
							<br />

							<div class="row">
								<div class="col-lg-8 control-section">
									<label class="label font-weight-bold">Imagem (foto) do Patrimônio</label>
									<div id="dropArea" style="height: auto; width:400px; overflow: auto;">
										<ejs-uploader id="fileUpload" allowedExtensions=".jpg,.jpeg,.png"
											selected="onFileSelect" removing="onFileRemove" name="UploadedFile">
										</ejs-uploader>
									</div>
								</div>

								<img id="previewImage" src="@Model.PatrimonioObj.Patrimonio.ImageUrl" width="100"
									heigth="100"
									style="display:@(string.IsNullOrEmpty(Model.PatrimonioObj.Patrimonio.ImageUrl) ? "none" : "block");" />
							</div>

							<div class="mb-4"></div>

							<div class="form-group row">
								<div class="col-12">
									<div class="row float-left">
										<div class="col-6 float-left">
											@if (Model.PatrimonioObj.Patrimonio.PatrimonioId != Guid.Empty)
											{
												<button method="post" asp-page-handler="Edit"
													asp-route-id="@Model.PatrimonioObj.Patrimonio.PatrimonioId"
													asp-route-npratual="@Model.PatrimonioObj.Patrimonio.NPR"
													class="btn btn-azul btn-submit-spin form-control" style="width:300px">
													<i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i>
													Atualizar Patrimônio
												</button>
											}
											else
											{
												<button type="submit" value="Submit" asp-page-handler="Submit"
													class="btn btn-azul btn-submit-spin form-control" style="width:300px">
													<i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i>
													Criar Patrimônio
												</button>
											}
										</div>
										<div class="col-6 float-right">
											<a asp-page="./Index" class="btn btn-ftx-fechar form-control"
												style="width:300px" data-ftx-loading>
												<i class="fa-duotone fa-circle-xmark icon-space icon-pulse"></i>
												Cancelar Operação
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Nova Marca -->
	<div class="modal fade" id="modalNovaMarca" tabindex="-1" aria-labelledby="modalNovaMarcaLabel" aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header modal-header-azul">
					<h5 class="modal-title" id="modalNovaMarcaLabel">
						<i class="fa-duotone fa-tag"></i> Adicionar Nova Marca
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
						aria-label="Close"></button>
				</div>
				<div class="modal-body" style="padding: 20px;">
					<div class="form-group">
						<label for="inputNovaMarca" class="font-weight-bold">Nome da Marca:</label>
						<input type="text" class="form-control" id="inputNovaMarca"
							placeholder="Digite o nome da nova marca" maxlength="30">
						<small class="form-text text-muted">Máximo 30 caracteres</small>
						<div class="invalid-feedback" id="marcaErrorMsg"></div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-vinho" data-bs-dismiss="modal">
						<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
						Cancelar
					</button>
					<button type="button" class="btn btn-azul" onclick="salvarNovaMarca()">
						<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
						Salvar Marca
					</button>
				</div>
			</div>
		</div>
	</div>

	<!-- Modal Novo Modelo -->
	<div class="modal fade" id="modalNovoModelo" tabindex="-1" aria-labelledby="modalNovoModeloLabel"
		aria-hidden="true">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header modal-header-azul">
					<h5 class="modal-title" id="modalNovoModeloLabel">
						<i class="fa-duotone fa-cube"></i> Adicionar Novo Modelo
					</h5>
					<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
						aria-label="Close"></button>
				</div>
				<div class="modal-body" style="padding: 20px;">
					<div class="form-group mb-3">
						<label class="font-weight-bold">Marca Selecionada:</label>
						<input type="text" class="form-control-plaintext" id="marcaSelecionadaModelo" readonly>
					</div>
					<div class="form-group">
						<label for="inputNovoModelo" class="font-weight-bold">Nome do Modelo:</label>
						<input type="text" class="form-control" id="inputNovoModelo"
							placeholder="Digite o nome do novo modelo" maxlength="30">
						<small class="form-text text-muted">Máximo 30 caracteres</small>
						<div class="invalid-feedback" id="modeloErrorMsg"></div>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-vinho" data-bs-dismiss="modal">
						<i class="fa-duotone fa-rotate-left icon-space icon-rotate-left"></i>
						Cancelar
					</button>
					<button type="button" class="btn btn-azul" onclick="salvarNovoModelo()">
						<i class="fa-duotone fa-file-plus icon-space icon-pulse"></i>
						Salvar Modelo
					</button>
				</div>
			</div>
		</div>
	</div>
</form>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
		crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
		crossorigin="anonymous"></script>

	<script src="~/js/dropify.min.js"></script>

	<script>
		(function () {
			try {
				$("#cmbMarcas").kendoComboBox({
					dataTextField: "text",
					dataValueField: "value",
					placeholder: "Selecione/Insira uma Marca",
					filter: "contains",
					height: 200,
					clearButton: true,
					value: "@(Model.PatrimonioObj?.Patrimonio?.Marca ?? "")"
				});

				$("#cmbModelos").kendoComboBox({
					dataTextField: "text",
					dataValueField: "value",
					placeholder: "Selecione/Insira um Modelo",
					filter: "contains",
					height: 200,
					clearButton: true,
					value: "@(Model.PatrimonioObj?.Patrimonio?.Modelo ?? "")"
				});

				$("#cmbSetores").kendoComboBox({
					dataTextField: "text",
					dataValueField: "value",
					placeholder: "Selecione um Setor",
					filter: "contains",
					height: 200,
					clearButton: true,
					value: "@(Model.PatrimonioObj?.Patrimonio?.SetorId != null && Model.PatrimonioObj.Patrimonio.SetorId != Guid.Empty ? Model.PatrimonioObj.Patrimonio.SetorId.ToString() : "")"
				});

				$("#cmbSecoes").kendoComboBox({
					dataTextField: "text",
					dataValueField: "value",
					placeholder: "Selecione uma Se\u00e7\u00e3o",
					filter: "contains",
					height: 200,
					clearButton: true,
					value: "@(Model.PatrimonioObj?.Patrimonio?.SecaoId != null && Model.PatrimonioObj.Patrimonio.SecaoId != Guid.Empty ? Model.PatrimonioObj.Patrimonio.SecaoId.ToString() : "")"
				});

				$("#cmbSituacao").kendoDropDownList({
					dataTextField: "text",
					dataValueField: "value",
					optionLabel: "Selecione a Situa\u00e7\u00e3o",
					height: 200,
					value: "@(Model.PatrimonioObj?.Patrimonio?.Situacao ?? "")"
				});
				// ================================================================
				// KENDO DATEPICKER INIT - Migrado de Syncfusion ejs-datepicker
				// ================================================================

				$("#txtDataEntrada").kendoDatePicker({
					format: "dd/MM/yyyy",
					culture: "pt-BR",
					dateInput: { format: "dd/MM/yyyy", messages: { year: "yyyy", month: "MM", day: "dd" } },
					placeholder: "dd/mm/aaaa",
					value: @Html.Raw(Model.PatrimonioObj?.Patrimonio?.DataEntrada != null ? "new Date(\"" + Model.PatrimonioObj.Patrimonio.DataEntrada.Value.ToString("yyyy-MM-dd") + "\")" : "null")
				});

				$("#txtDataBaixa").kendoDatePicker({
					format: "dd/MM/yyyy",
					culture: "pt-BR",
					dateInput: { format: "dd/MM/yyyy", messages: { year: "yyyy", month: "MM", day: "dd" } },
					placeholder: "dd/mm/aaaa",
					max: new Date(@DateTime.Today.AddYears(5).Year, @(DateTime.Today.AddYears(5).Month - 1), @DateTime.Today.AddYears(5).Day),
					value: @Html.Raw(Model.PatrimonioObj?.Patrimonio?.DataSaida != null ? "new Date(\"" + Model.PatrimonioObj.Patrimonio.DataSaida.Value.ToString("yyyy-MM-dd") + "\")" : "null")
				});			} catch (error) {
				Alerta.TratamentoErroComLinha("Upsert.cshtml", "kendoControls.init", error);
			}
		})();
	</script>

	<script src="~/js/cadastros/patrimonio.js" asp-append-version="true"></script>
	<script src="~/css/patrimonio.css" asp-append-version="true"></script>

}