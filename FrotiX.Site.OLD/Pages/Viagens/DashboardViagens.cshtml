                    selector: '#lstSetorSolicitanteAlteradoDashboard',
                    flatData: dataSetor,
                    placeholder: 'Selecione um Setor'
                });

                // Finalidade
                $("#lstFinalidadeAlteradaDashboard").kendoComboBox({
                    dataTextField: "descricao",
                    dataValueField: "finalidadeId",
                    placeholder: "Selecione uma Finalidade",
                    filter: "contains",
                    dataSource: dataFinalidade,
                    height: 250,
                    clearButton: true,
                    change: function (e) {
                        try { FinalidadeChangeDashboard(e); }
                        catch (err) { console.error("FinalidadeChangeDashboard:", err); }
                    }
                });

                // Motorista
                $("#lstMotoristaAlteradoDashboard").kendoComboBox({
                    dataTextField: "nome",
                    dataValueField: "motoristaId",
                    placeholder: "Selecione um Motorista",
                    filter: "contains",
                    dataSource: dataMotorista,
                    height: 250,
                    clearButton: true
