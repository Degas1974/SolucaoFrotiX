                var dataRequisitante = @Html.Raw(Json.Serialize(ViewData["lstRequisitante"]));
                var dataEvento = @Html.Raw(Json.Serialize(ViewData["lstEvento"]));
                var dataSetor = @Html.Raw(Json.Serialize(ViewData["lstSetor"]));

                // [KENDO] Init DDT flat: lstEventoDashboard (Evento)
                KendoDDTHelper.initFlat({
                    selector: '#lstEventoDashboard',
                    data: dataEvento,
                    textField: 'evento',
                    valueField: 'eventoId',
                    placeholder: 'Selecione um Evento...',
                    enabled: false
                });

