@* ========================================================================================
 * ARQUIVO: Pages/Unidade/Upsert.cshtml
 * OBJETIVO: Formulario de cadastro/edicao de Unidades organizacionais (Diretoria/Coordenacao/Divisao/Secao)
 *           com campos hierarquicos DropDownList pai, sistema CRITICO para estrutura organizacional
 *           FrotiX usada em lotacoes motoristas e relatorios por setor.
 * ENTRADAS: route /Unidade/Upsert ou /Unidade/Upsert?id=123 (edicao), model UpsertModel
 *           PageModel (properties: Unidade entity, UnidadesPai List dropdown, ModoEdicao boolean),
 *           form fields: Codigo string 20 chars obrigatorio unique, Nome string 100 chars
 *           obrigatorio, Nivel int 1-4 radio buttons (1=Diretoria, 2=Coordenacao, 3=Divisao,
 *           4=Secao), UnidadePaiId int nullable DropDownList cascading (filtra unidades por
 *           nivel-1, Coordenacao nivel 2 seleciona Diretoria pai nivel 1, Divisao nivel
 *           3 seleciona Coordenacao pai nivel 2), Descricao textarea 500 chars opcional,
 *           Ativo checkbox default true
 * SAIDAS: Form renderizado com validacao client-side asp-validation-for, submit POST
 *         /Unidade/Upsert OnPost handler valida dados insere/atualiza Unidade tabela, redirect
 *         /Unidade/Index com TempData SuccessMessage, validacoes: Codigo unique (query
 *         Where Codigo=input.Codigo AND Id!=input.Id verifica duplicata retorna ModelState.AddModelError),
 *         UnidadePaiId obrigatorio se Nivel > 1 (Coordenacoes/Divisoes/Secoes devem ter
 *         pai hierarquico), UnidadePaiId.Nivel = input.Nivel - 1 (pai deve ser nivel imediatamente
 *         superior, Divisao nivel 3 pai deve ser Coordenacao nivel 2 nao pode ser Diretoria
 *         nivel 1 pulando nivel)
 * CHAMADA POR: Menu Cadastros > Unidades > Novo (link /Unidade/Upsert sem id), botao
 *              Editar grid /Unidade/Index (link /Unidade/Upsert?id=123)
 * CHAMA: PageModel UpsertModel.cshtml.cs OnGet/OnPost handlers, EF Core DbContext Unidades
 *        table CRUD, Syncfusion DropDownList component cascading, asp-validation-for Tag
 *        Helpers, jQuery Validation Unobtrusive client-side
 * DEPENDENCIAS: ASP.NET Core Razor Pages 8.0, Syncfusion EJ2 DropDownList, Bootstrap
 *               5.3.8 form controls, jQuery Validation
 * OBSERVACOES: 260 linhas form hierarquico CRITICO estrutura organizacional. Validacao
 *              nivel pai essencial: Divisao nivel 3 DEVE ter Coordenacao nivel 2 como
 *              pai nao pode ter Diretoria nivel 1 (pularia nivel hierarquia invalida).
 * REGRA: nunca use o simbolo arroba dentro deste bloco de comentario
 ======================================================================================== *@
@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model FrotiX.Pages.Unidade.UpsertModel

@{
	ViewData["Title"] = "Unidades Usuárias";
	ViewData["PageName"] = "unidade_upsert";
	ViewData["Heading"] = "<i class='fa-duotone fa-chalkboard-user'></i> Cadastros: <span class='fw-300'>Unidades Usuárias</span>";
	ViewData["Category1"] = "Cadastros";
	ViewData["PageIcon"] = "fa-duotone fa-chalkboard-user";
}

<style>
	/* ALTURA AUMENTADA EM 20% */
	.form-control-xs {
		height: calc((1em + .775rem + 2px) * 1.2) !important;
		/* +20% na altura */
		padding: .15rem .3rem !important;
		/* +20% no padding (era .125rem .25rem) */
		font-size: .9rem !important;
		/* +20% no font-size (era .75rem) */
		line-height: 1.8;
		/* +20% (era 1.5) */
		border-radius: .2rem;
	}

	.label {
		margin-bottom: -5px;
		margin-top: 10px;
	}

	input[type=checkbox] {
		vertical-align: middle;
		position: relative;
		bottom: 1px;
	}
</style>

@section HeadBlock {

}

<form method="post" asp-action="Upsert">
	<div class="row">
		<div class="col-xl-12">
			<div id="panel-1" class="panel">
				<div class="panel-container show">
					<!-- HEADER DO CARD -->
					<div class="ftx-card-header">
						<h2 class="titulo-paginas">
							<i class="fa-duotone fa-garage-car"></i>
							@(Model.UnidadeObj.UnidadeId != Guid.Empty ? "Atualizar " : "Criar ") Unidade Usuária
						</h2>
					</div>

					<div class="panel-content">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						@if (Model.UnidadeObj.UnidadeId != Guid.Empty)
						{
							<input type="hidden" asp-for="UnidadeObj.UnidadeId" />
						}

						<div class="col-8 pt-3">

							<div class="row">
								<div class="col-2">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="UnidadeObj.Sigla"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.Sigla"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.Sigla"
											placeholder="Insira a sigla" />
									</div>
								</div>
								<div class="col-5">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="UnidadeObj.Descricao"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.Descricao"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.Descricao"
											placeholder="Insira a descrição da unidade" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="UnidadeObj.Categoria"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.Categoria"></span>
										<select class="form-control form-control-xs" asp-for="UnidadeObj.Categoria">
											<option value="">-- Categoria --</option>
											<option value="Presidência">Presidência</option>
											<option value="Mesa">Mesa</option>
											<option value="DG">DG</option>
											<option value="SGM">SGM</option>
											<option value="Liderança">Liderança</option>
											<option value="Secom">Secom</option>
											<option value="SNE">SNE</option>
											<option value="Fixos">Fixos</option>
											<option value="Gerais">Gerais</option>
											<option value="Depol">Depol</option>
										</select>
									</div>
								</div>
								<div class="col-2">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.QtdMotoristas"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.QtdMotoristas"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.QtdMotoristas"
											placeholder="Insira a quantidade de motoristas" />
									</div>
								</div>
							</div>

							<div class="row">
								<div class="col-6">
									<div class="form-group font-weight-bold">
										<label class="label label-required"
											asp-for="UnidadeObj.PrimeiroContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.PrimeiroContato"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.PrimeiroContato"
											placeholder="Insira o NOME do contato" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold label-required"
											asp-for="UnidadeObj.PontoPrimeiroContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.PontoPrimeiroContato"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.PontoPrimeiroContato" placeholder="Insira o PONTO" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group font-weight-bold">
										<label class="label" asp-for="UnidadeObj.PrimeiroRamal"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.PrimeiroRamal"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.PrimeiroRamal"
											placeholder="Insira o ramal/celular" />
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-6">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.SegundoContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.SegundoContato"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.SegundoContato" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.PontoSegundoContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.PontoSegundoContato"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.PontoSegundoContato" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold" asp-for="UnidadeObj.SegundoRamal"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.SegundoRamal"></span>
										<input class="form-control form-control-xs" asp-for="UnidadeObj.SegundoRamal" />
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-6">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.TerceiroContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.TerceiroContato"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.TerceiroContato" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.PontoTerceiroContato"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.PontoTerceiroContato"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.PontoTerceiroContato" />
									</div>
								</div>
								<div class="col-3">
									<div class="form-group">
										<label class="label font-weight-bold"
											asp-for="UnidadeObj.TerceiroRamal"></label>
										<span class="text-danger font-weight-light"
											asp-validation-for="UnidadeObj.TerceiroRamal"></span>
										<input class="form-control form-control-xs"
											asp-for="UnidadeObj.TerceiroRamal" />
									</div>
								</div>
							</div>
							<br />
							<div class="row">
								<div class="col-12">
									<div class="form-group">
										<label class="font-weight-bold" asp-for="UnidadeObj.Status">
											<span class="text-danger font-weight-light"
												asp-validation-for="UnidadeObj.Status"></span>
											<input type="checkbox" class="form-check-input"
												asp-for="UnidadeObj.Status" /> Ativo/Inativo
										</label>
									</div>
									<br />
								</div>
							</div>
							<div class="form-group row">
								<div class="col-9">
									<div class="row">
										<div class="col-6">
											<button type="submit" value="Submit" asp-page-handler="Submit"
												class="btn btn-azul btn-submit-spin form-control">
												<i class="fa-duotone fa-floppy-disk icon-space icon-pulse"></i>
												@(Model.UnidadeObj.UnidadeId != Guid.Empty ? "Atualizar Unidade" :
																								"Criar Unidade")
											</button>
										</div>
										<div class="col-6">
											<a asp-page="./Index" class="btn btn-ftx-fechar form-control"
												data-ftx-loading>
												<i class="fa-duotone fa-circle-xmark icon-space icon-pulse"></i>
												Cancelar Operação
											</a>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>

@section ScriptsBlock {
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
		crossorigin="anonymous" />
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
		crossorigin="anonymous"></script>
}