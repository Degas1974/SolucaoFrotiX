@section ScriptsBlock {

    <script>
        (function () {
            try {
                var dataTipoServico = @Html.Raw(Json.Serialize(Model.Filtro.TipoServicoList));
                var dataTurno = @Html.Raw(Json.Serialize(Model.Filtro.TurnoList));
                var dataStatus = @Html.Raw(Json.Serialize(Model.Filtro.StatusList));
                var dataMotorista = @Html.Raw(Json.Serialize(Model.Filtro.MotoristaList));
                var dataVeiculo = @Html.Raw(Json.Serialize(Model.Filtro.VeiculoList));
                var dataLotacao = @Html.Raw(Json.Serialize(Model.Filtro.LotacaoList));
                var dataObsPriority = [
                    { text: "Baixa", value: "Baixa" },
                    { text: "Normal", value: "Normal" },
                    { text: "Alta", value: "Alta" }
                ];

                $("#tipoServicoId").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todos",
                    filter: "contains",
                    dataSource: dataTipoServico,
                    value: "@(Model.Filtro.TipoServicoId?.ToString() ?? "")"
                });

                $("#turnoId").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todos",
                    filter: "contains",
                    dataSource: dataTurno,
                    value: "@(Model.Filtro.TurnoId?.ToString() ?? "")"
                });

                $("#statusMotorista").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todos",
                    filter: "contains",
                    dataSource: dataStatus,
                    value: "@(Model.Filtro.StatusMotorista ?? "")"
                });

                $("#motoristaId").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todos",
                    filter: "contains",
                    dataSource: dataMotorista,
                    value: "@(Model.Filtro.MotoristaId?.ToString() ?? "")"
                });

                $("#veiculoId").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todos",
                    filter: "contains",
                    dataSource: dataVeiculo,
                    value: "@(Model.Filtro.VeiculoId?.ToString() ?? "")"
                });

                $("#lotacao").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    optionLabel: "Todas",
                    filter: "contains",
                    dataSource: dataLotacao,
                    value: "@(Model.Filtro.Lotacao ?? "")"
                });

                $("#obsPriority").kendoDropDownList({
                    dataTextField: "text",
                    dataValueField: "value",
                    dataSource: dataObsPriority,
                    value: "Normal"
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha("ListaEscala.cshtml", "kendoDropDownList.init", error);
            }
        })();
    </script>

    <script src="~/js/cadastros/ListaEscala.js" asp-append-version="true"></script>

