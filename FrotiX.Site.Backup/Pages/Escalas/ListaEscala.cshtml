@using FrotiX.Repository.IRepository
@using Syncfusion.EJ2
@using Stimulsoft.Report.Mvc
@using FrotiX.Helpers

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IUnitOfWork _unitOfWork


@{
    ViewData["Title"] = "Lista de Escalas";
    ViewData["PageName"] = "escalas_listaescala";
    ViewData["Heading"] = "<i class='fa-duotone fa-user'></i> Escalas: <span class='fw-300'>Lista Escalas</span>";
    ViewData["Category1"] = "Escalas";
    ViewData["PageIcon"] = "fa-duotone fa-user";
}

@model FrotiX.Pages.Escalas.ListaEscalaModel
<style>
    .status-disponivel {
        background-color: #28a745;
        color: white !important;
    }

    .status-em-viagem {
        background-color: #007bff;
        color: white !important;
    }

    .status-indisponivel {
        background-color: red;
        color: white !important;
    }

    .status-em-servico {
        background-color: orange;
        color: black !important;
    }

    .status-economildo {
        background-color: yellow;
        color: black !important;
    }

    .status-reservado {
        background-color: #6c757d;
        color: white;
    }

    .motoristas-vez-card {
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
    }

    .motoristas-vez-card:hover {
        transform: translateY(-5px);
    }

    .contador-viagens {
        font-size: 2rem;
        font-weight: bold;
    }
</style>


@if (TempData["erro"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Erro:</strong> @TempData["erro"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Sucesso:</strong> @TempData["sucesso"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


<div class="alert alert-info">
    <strong>Debug:</strong>
    Escalas carregadas: @(Model.EscalasObj?.Count ?? 0) |
    Motoristas: @(Model.EscalasObj?.Select(e => e.MotoristaId).Distinct().Count() ?? 0) |
    Veículos: @(Model.EscalasObj?.Select(e => e.VeiculoId).Distinct().Count() ?? 0) |
</div>

<div class="row mb-3">
    <div class="col-md-9">
        <h2><i class="fas fa-calendar-alt"></i> @ViewData["Title"]</h2>
    </div>
    <div class="col-md-3 text-end">

        <a asp-page="./UpsertCEscala" class="btn btn-primary">
            <i class="fas fa-plus"></i> Adicionar Escala
        </a>

        <a href="#" id="btnFichaEscala" class="btn btn-info">
            <i class="fas fa-print"></i> Ficha Escala
        </a>
    </div>
</div>

<!-- Motoristas da Vez -->
<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-users"></i> Motoristas da Vez (Total: @(Model.EscalasObj?.Count(e =>
                        e.StatusMotorista == "Disponível") ?? 0))</h5>
    </div>
    <div class="card-body">
        <div id="motoristasVezContainer" class="row">

            @if (Model.EscalasObj != null && Model.EscalasObj.Any())
            {
                var motoristasDisponiveis = Model.EscalasObj
                .Where(e => e.StatusMotorista == "Disponível" && e.MotoristaId.HasValue)
                .GroupBy(e => e.MotoristaId)
                .Select(g => g.First())
                .Take(6);

                foreach (var motorista in motoristasDisponiveis)
                {
                    <div class="col-md-2 mb-2">
                        <div class="card motoristas-vez-card text-center">
                            <div class="card-body p-2">
                                @if (motorista.Foto != null && motorista.Foto.Length > 0)
                                {
                                    <img src="data:image/png;base64,@Convert.ToBase64String(motorista.Foto)" class="rounded-circle"
                                        width="50" height="50" alt="@motorista.NomeMotorista">
                                }
                                else
                                {
                                    <img src="/images/default-driver.png" class="rounded-circle" width="50" height="50"
                                        alt="@motorista.NomeMotorista">
                                }
                                <h6 class="mt-2 mb-1">@motorista.NomeMotorista</h6>
                                <p class="mb-1 small">@(motorista.Placa ?? "Sem veículo")</p>
                                <div class="contador-viagens">@motorista.NumeroSaidas</div>
                                <small>Saídas</small>
                                <span class="badge @motorista.GetStatusClass() mt-2">
                                    @motorista.GetStatusText()
                                </span>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center text-muted">
                    <p>Nenhum motorista disponível no momento</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Filtros -->
<div class="card mb-3">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-filter"></i> Filtros</h5>
    </div>
    <div class="card-body">
        <form id="filtroForm" method="post">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.DataFiltro"></label>
                        <ejs-datepicker id="DataEscala" asp-for="Filtro.DataFiltro" format="dd/MM/yyyy"
                            placeholder="Selecione a data"></ejs-datepicker>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.TipoServicoId"></label>
                        <ejs-dropdownlist id="tipoServicoId" asp-for="Filtro.TipoServicoId"
                            dataSource="@Model.Filtro.TipoServicoList" placeholder="Todos" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.TurnoId"></label>
                        <ejs-dropdownlist id="turnoId" asp-for="Filtro.TurnoId" dataSource="@Model.Filtro.TurnoList"
                            placeholder="Todos" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.StatusMotorista"></label>
                        <ejs-dropdownlist id="statusMotorista" asp-for="Filtro.StatusMotorista"
                            dataSource="@Model.Filtro.StatusList" placeholder="Todos" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.MotoristaId"></label>
                        <ejs-dropdownlist id="motoristaId" asp-for="Filtro.MotoristaId"
                            dataSource="@Model.Filtro.MotoristaList" placeholder="Todos" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.VeiculoId"></label>
                        <ejs-dropdownlist id="veiculoId" asp-for="Filtro.VeiculoId"
                            dataSource="@Model.Filtro.VeiculoList" placeholder="Todos" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.Lotacao"></label>
                        <ejs-dropdownlist id="lotacao" asp-for="Filtro.Lotacao" dataSource="@Model.Filtro.LotacaoList"
                            placeholder="Todas" allowFiltering="true">
                            <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                        </ejs-dropdownlist>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Filtro.TextoPesquisa"></label>
                        <ejs-textbox id="textoPesquisa" asp-for="Filtro.TextoPesquisa"
                            placeholder="Pesquisar..."></ejs-textbox>
                    </div>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    <button type="submit" id="btnFiltrar" class="btn btn-primary">
                        <i class="fas fa-search"></i> Filtrar
                    </button>
                    <a asp-page="./ListaEscala" class="btn btn-secondary">
                        <i class="fas fa-eraser"></i> Limpar Filtros
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Grid de Escalas -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-list"></i> Escalas do Dia (@(Model.EscalasObj?.Count ?? 0) registros)</h5>
    </div>
    <div class="card-body">

        <ejs-grid id="gridEscalas" dataSource="@Model.EscalasObj" allowPaging="true" allowSorting="true"
            allowExcelExport="true" allowPdfExport="true"
            toolbar="@(new List<string>() { "ExcelExport", "PdfExport", "Search" })">
            <e-grid-pagesettings pageSize="20"></e-grid-pagesettings>
            <e-grid-columns>

                <e-grid-column field="DataEscala" headerText="Data" width="100" format="dd/MM/yyyy"
                    type="date"></e-grid-column>
                <e-grid-column field="NomeMotorista" headerText="Motorista" width="150"></e-grid-column>
                <e-grid-column field="Placa" headerText="Veículo" width="100"></e-grid-column>
                <e-grid-column field="NomeTurno" headerText="Turno" width="100"></e-grid-column>
                <e-grid-column field="HoraInicio" headerText="Início" width="80"></e-grid-column>
                <e-grid-column field="HoraFim" headerText="Fim" width="80"></e-grid-column>
                <e-grid-column field="NomeServico" headerText="Tipo Serviço" width="120"></e-grid-column>
                <e-grid-column field="Lotacao" headerText="Lotação" width="100"></e-grid-column>
                <e-grid-column field="NumeroSaidas" headerText="Saídas" width="80" textAlign="Center"></e-grid-column>

                <e-grid-column field="StatusMotorista" headerText="Status" width="120"
                    template="#templateStatusMotorista"></e-grid-column>
                <e-grid-column field="EscalaDiaId" headerText="Ações" width="150" template="#actionTemplate"
                    textAlign="Center"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<!--Modal de Visualização da Escala-->
<div class="modal fade" id="modalVisualizarEscala" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title"><i class="fas fa-eye me-2"></i>Detalhes da Escala</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Loading -->
                <div id="viewLoading" class="text-center py-5" style="display: none;">
                    <div class="spinner-border text-info" role="status">
                        <span class="visually-hidden">Carregando...</span>
                    </div>
                    <p class="mt-2">Carregando dados...</p>
                </div>

                <!-- Conteúdo -->
                <div id="viewConteudo">
                    <!-- Cabeçalho com Foto e Info Principal -->
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            <img id="viewFotoMotorista" src="/images/default-driver.png"
                                class="rounded-circle border border-3 border-info" width="120" height="120"
                                alt="Foto Motorista">
                            <h5 id="viewNomeMotorista" class="mt-2 mb-0">-</h5>
                            <span id="viewStatusBadge" class="badge mt-2">-</span>
                        </div>
                        <div class="col-md-9">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <i class="fas fa-calendar text-info me-2"></i>
                                                <strong>Data:</strong> <span id="viewDataEscala">-</span>
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-clock text-info me-2"></i>
                                                <strong>Horário:</strong> <span id="viewHorario">-</span>
                                            </p>
                                            <p class="mb-0">
                                                <i class="fas fa-sun text-info me-2"></i>
                                                <strong>Turno:</strong> <span id="viewTurno">-</span>
                                            </p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <i class="fas fa-car text-info me-2"></i>
                                                <strong>Veículo:</strong> <span id="viewPlaca">-</span>
                                            </p>
                                            <p class="mb-2">
                                                <i class="fas fa-map-marker-alt text-info me-2"></i>
                                                <strong>Lotação:</strong> <span id="viewLotacao">-</span>
                                            </p>
                                            <p class="mb-0">
                                                <i class="fas fa-route text-info me-2"></i>
                                                <strong>Saídas:</strong> <span id="viewNumeroSaidas"
                                                    class="badge bg-primary">0</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Alerta de Cobertura (aparece apenas quando Indisponível) -->
                    <div id="divCoberturaInfo" class="alert alert-warning mb-4" style="display: none;">
                        <div class="row align-items-center">
                            <div class="col-md-1 text-center">
                                <i class="fas fa-user-shield fa-2x text-warning"></i>
                            </div>
                            <div class="col-md-11">
                                <h6 class="mb-1"><i class="fas fa-exchange-alt me-2"></i>Motorista em Cobertura</h6>
                                <p class="mb-1">
                                    <strong>Cobertor:</strong> <span id="viewNomeCobertor"
                                        class="text-primary fw-bold">-</span>
                                </p>
                                <p class="mb-0">
                                    <strong>Motivo:</strong> <span id="viewMotivoCobertura">-</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Alerta quando este motorista está COBRINDO outro (aparece para o cobertor) -->
                    <div id="divCobrindoInfo" class="alert alert-info mb-4" style="display: none;">
                        <div class="row align-items-center">
                            <div class="col-md-1 text-center">
                                <i class="fas fa-hands-helping fa-2x text-info"></i>
                            </div>
                            <div class="col-md-11">
                                <h6 class="mb-1"><i class="fas fa-user-check me-2"></i>Este motorista está cobrindo</h6>
                                <p class="mb-1">
                                    <strong>Motorista Coberto:</strong> <span id="viewNomeCoberto"
                                        class="text-primary fw-bold">-</span>
                                </p>
                                <p class="mb-0">
                                    <strong>Motivo:</strong> <span id="viewMotivoCoberto">-</span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Informações Detalhadas -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-primary text-white py-2">
                                    <i class="fas fa-briefcase me-2"></i>Serviço
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">
                                        <strong>Tipo de Serviço:</strong><br>
                                        <span id="viewTipoServico" class="text-muted">-</span>
                                    </p>
                                    <p class="mb-0">
                                        <strong>Requisitante:</strong><br>
                                        <span id="viewRequisitante" class="text-muted">-</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card h-100">
                                <div class="card-header bg-success text-white py-2">
                                    <i class="fas fa-info-circle me-2"></i>Observações
                                </div>
                                <div class="card-body">
                                    <p id="viewObservacoes" class="mb-0 text-muted">Nenhuma observação registrada</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a id="btnEditarEscala" href="#" class="btn btn-primary">
                    <i class="fas fa-edit me-1"></i>Editar
                </a>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>Fechar
                </button>
            </div>
        </div>
    </div>
</div>


<!-- Observações da Escala -->
<div class="card mt-3">
    <div class="card-header bg-warning">
        <h5 class="mb-0"><i class="fas fa-sticky-note"></i> Observações do Dia</h5>
    </div>
    <div class="card-body">
        <div id="observacoesContainer">
            <p class="text-muted">Nenhuma observação para hoje</p>
        </div>
        <button type="button" class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#modalObservacao">
            <i class="fas fa-plus"></i> Adicionar Observação
        </button>
    </div>
</div>

<!-- Modal Observação -->
<div class="modal fade" id="modalObservacao" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Adicionar Observação</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="form-group mb-3">
                    <label>Título</label>
                    <ejs-textbox id="obsTitle" placeholder="Título da observação"></ejs-textbox>
                </div>
                <div class="form-group mb-3">
                    <label>Descrição</label>
                    <ejs-textbox id="obsDescription" multiline="true"
                        placeholder="Descrição da observação"></ejs-textbox>
                </div>
                <div class="form-group mb-3">
                    <label>Prioridade</label>
                    <ejs-dropdownlist id="obsPriority"
                        dataSource='@(new List<object> { new { text = "Baixa", value = "Baixa" }, new { text = "Normal", value = "Normal" }, new { text = "Alta", value = "Alta" } })'
                        value='@("Normal")'>
                        <e-dropdownlist-fields text="text" value="value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Exibir De</label>
                            <ejs-datepicker id="obsDateFrom" format="dd/MM/yyyy"></ejs-datepicker>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Exibir Até</label>
                            <ejs-datepicker id="obsDateTo" format="dd/MM/yyyy"></ejs-datepicker>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" onclick="salvarObservacao()">Salvar</button>
            </div>
        </div>
    </div>
</div>

@section ScriptsBlock {

    <script src="~/js/cadastros/ListaEscala.js" asp-append-version="true"></script>

    <script type="text/x-template" id="templateStatusMotorista">
            ${if(StatusMotorista)}
                <span class="badge status-${getStatusClass(StatusMotorista)}">${StatusMotorista}</span>
            ${else}
                <span class="badge bg-secondary">Indefinido</span>
            ${/if}
        </script>

    <script id="actionTemplate" type="text/x-template">
            ${if(EscalaDiaId)}
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-info btn-sm text-white btn-visualizar" 
                            data-id="${EscalaDiaId}" 
                            title="Visualizar">
                        <i class="fas fa-eye"></i>
                    </button>   
                    <a href="/Escalas/UpsertEEscala?id=${EscalaDiaId}" class="btn btn-primary btn-sm" title="Editar">
                        <i class="fas fa-edit"></i>
                    </a>
                    <button class="btn btn-danger btn-sm btn-excluir" 
                            data-id="${EscalaDiaId}" 
                            title="Excluir">
                        <i class="fas fa-trash"></i>
                    </button>                           
                </div>
            ${else}
                <span class="text-muted">Sem ações</span>
            ${/if}
        </script>


}