@page
@model Frotix.Pages.Administracao.LogErrosDashboardModel
@{
    ViewData["Title"] = "Dashboard de Erros";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <h2><i class="fas fa-bug"></i> Dashboard de Erros do Sistema</h2>
        </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <h5 class="card-title">Erros (24h)</h5>
                    <h2 id="total-erros-24h">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Páginas Afetadas</h5>
                    <h2 id="total-paginas">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <h5 class="card-title">Tipos de Erro</h5>
                    <h2 id="total-tipos">0</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <h5 class="card-title">Taxa de Resolução</h5>
                    <h2 id="taxa-resolucao">0%</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Erros ao Longo do Tempo</h5>
                </div>
                <div class="card-body">
                    <canvas id="chartErrosTempo" height="100"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Top 5 Tipos de Erro</h5>
                </div>
                <div class="card-body">
                    <canvas id="chartTiposErro"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabelas -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Top 10 Páginas com Erros</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm" id="tabelaPaginas">
                        <thead>
                            <tr>
                                <th>Página</th>
                                <th class="text-end">Erros</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5>Últimos 10 Erros</h5>
                </div>
                <div class="card-body">
                    <div id="ultimosErros" class="list-group"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/log-erros-dashboard.js"></script>
}
