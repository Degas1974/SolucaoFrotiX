@section ScriptsBlock {
    <script src="~/js/Toasts/AppToast.js" asp-append-version="true"></script>

    <script>
            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * CÁLCULO DE CUSTOS EM BATCH - ADMINISTRAÇÃO
             * ═══════════════════════════════════════════════════════════════════════════
             * @@description Sistema de processamento batch para recálculo de custos de viagens
            * Inclui barra de progresso em tempo real, polling de status e contador de tempo
                */

            /** @@type { Date | null } Timestamp de início do processamento */
            let inicioProcessamento = null;
            /** @@type { number | null } ID do intervalo do contador de tempo */
        let intervalTimerId = null;
            /** @@type { number | null } ID do intervalo de polling do progresso */
            let intervalProgressoId = null;

            /**
             * Inicialização da página
             * @@description Configura handler do botão de cálculo de custos
            */
        $(document).ready(function () {
            try {
                $("#btnCalculaCustoViagens").on("click", function () {
                    iniciarCalculoCustos();
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "document.ready", error);
            }
        });

            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * FUNÇÕES PRINCIPAIS - PROCESSAMENTO BATCH
             * ═══════════════════════════════════════════════════════════════════════════
             */

            /**
             * Inicia o cálculo de custos em batch
             * @@description Prepara interface, inicia contadores e dispara requisição AJAX
            * Timeout configurado para 30 minutos devido ao volume de dados
                * @@returns { void}
                */
        function iniciarCalculoCustos() {
            try {
                // Prepara interface para processamento
                marcarBotaoProcessando();
                mostrarBarraProgresso();

                // Inicia contador de tempo decorrido
                inicioProcessamento = new Date();
                iniciarContagemTempo();

                // Atualiza elementos de status da interface
                $("#progressLabel").text("Iniciando processamento...");
                $("#progressMessage").text("Preparando dados...");
                $("#progressFill").css("width", "0%");
                $("#progressText").text("0%");
                $("#statStatus").text("⟳ Iniciando");
                $("#statTotal").text("--");

                // Inicia polling para acompanhamento em tempo real
                iniciarMonitoramentoProgresso();

                // ═══════════════════════════════════════════════════════════════════
                // AJAX POST - Dispara processamento batch no servidor
                // ═══════════════════════════════════════════════════════════════════
                $.ajax({
                    type: "POST",
                    url: "/api/viagem/ExecutarCalculoCustoBatch",
                    timeout: 1800000, // 30 minutos timeout
                    success: function (data) {
                        try {
                            // Para monitoramentos ao concluir
                            pararMonitoramentoProgresso();
                            pararContagemTempo();

                            if (data.success) {
                                // Força atualização final para 100%
                                atualizarInterface(data.totalViagens, data.totalViagens, data.message, 100);

                                // Mostra ícone de sucesso com animação
                                $("#successIcon").fadeIn(500);

                                AppToast.show('Verde', data.message, 5000);
                            } else {
                                atualizarErro(data.message);
                                AppToast.show('Vermelho', data.message || 'Erro ao processar', 4000);
                            }

                            desmarcarBotaoProcessando();
                        } catch (error) {
                            Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "iniciarCalculoCustos.success", error);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        try {
                            // Para monitoramentos e restaura botão
                            pararMonitoramentoProgresso();
                            pararContagemTempo();
                            desmarcarBotaoProcessando();

                            // Monta mensagem de erro apropriada
                            let mensagemErro = 'Erro ao processar: ' + (errorThrown || textStatus);
                            if (textStatus === 'timeout') {
                                mensagemErro = 'Timeout: O processamento excedeu o tempo limite. Verifique o servidor.';
                            }

                            atualizarErro(mensagemErro);
                            AppToast.show('Vermelho', mensagemErro, 5000);
                        } catch (error) {
                            Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "iniciarCalculoCustos.error", error);
                        }
                    }
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "iniciarCalculoCustos", error);
            }
        }

            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * POLLING DE PROGRESSO - MONITORAMENTO EM TEMPO REAL
             * ═══════════════════════════════════════════════════════════════════════════
             */

            /**
             * Inicia o polling de progresso
             * @@description Consulta o servidor a cada 500ms para atualizar a barra de progresso
            * @@returns { void}
            */
        function iniciarMonitoramentoProgresso() {
            try {
                // Limpa intervalo anterior se existir
                if (intervalProgressoId !== null) {
                    clearInterval(intervalProgressoId);
                }

                // Consulta o progresso a cada 500ms
                intervalProgressoId = setInterval(() => {
                    consultarProgresso();
                }, 500);
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "iniciarMonitoramentoProgresso", error);
            }
        }

            /**
             * Para o polling de progresso
             * @@description Limpa o intervalo de consulta
            * @@returns { void}
            */
        function pararMonitoramentoProgresso() {
            try {
                if (intervalProgressoId !== null) {
                    clearInterval(intervalProgressoId);
                    intervalProgressoId = null;
                }
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "pararMonitoramentoProgresso", error);
            }
        }

            /**
             * Consulta o progresso atual do processamento
             * @@description Faz requisição GET ao endpoint de status e atualiza interface
            * @@returns { void}
            */
        function consultarProgresso() {
            try {
                $.ajax({
                    type: "GET",
                    url: "/api/viagem/ObterProgressoCalculoCustoBatch",
                    success: function (data) {
                        try {
                            if (data.success && data.progresso) {
                                const p = data.progresso;

                                // Atualiza interface se houver progresso real
                                if (p.total > 0) {
                                    atualizarInterface(p.processado, p.total, p.mensagem, p.percentual);
                                }

                                // Se concluído pelo servidor, para monitoramento
                                if (p.concluido) {
                                    pararMonitoramentoProgresso();

                                    if (p.erro) {
                                        atualizarErro(p.erro);
                                    }
                                }
                            }
                        } catch (error) {
                            Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "consultarProgresso.success", error);
                        }
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        // Ignora erros de consulta de progresso (não crítico)
                        console.log("Erro ao consultar progresso (ignorado):", textStatus);
                    }
                });
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "consultarProgresso", error);
            }
        }

            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * FUNÇÕES DE INTERFACE - ATUALIZAÇÃO VISUAL
             * ═══════════════════════════════════════════════════════════════════════════
             */

            /**
             * Atualiza a interface com o progresso atual
             * @@description Atualiza barra de progresso, labels e estatísticas
            * @@param { number } processado - Quantidade de registros processados
                * @@param { number } total - Total de registros a processar
                    * @@param { string } mensagem - Mensagem de status
                        * @@param { number } percentual - Percentual de conclusão(0 - 100)
                            * @@returns { void}
                            */
        function atualizarInterface(processado, total, mensagem, percentual) {
            try {
                // Atualiza barra de progresso
                $("#progressFill").css("width", percentual + "%");
                $("#progressText").text(percentual + "%");
                $("#progressPercent").text(percentual + "%");

                // Atualiza labels
                $("#progressLabel").text(mensagem);
                $("#progressMessage").text(mensagem);

                // Atualiza estatísticas formatadas em PT-BR
                $("#statTotal").text(total.toLocaleString('pt-BR'));
                $("#statProcessado").text(processado.toLocaleString('pt-BR'));

                // Atualiza status final
                if (percentual >= 100) {
                    $("#statStatus").text("✓ OK");
                    $("#progressText").text("✓ Concluído!");
                } else {
                    $("#statStatus").text("⟳ Processando");
                }
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "atualizarInterface", error);
            }
        }

            /**
             * Atualiza a interface para estado de erro
             * @@description Exibe mensagem de erro e reseta barra de progresso
            * @@param { string } mensagem - Mensagem de erro a exibir
                * @@returns { void}
                */
        function atualizarErro(mensagem) {
            try {
                $("#progressFill").css("width", "0%");
                $("#progressText").text("✗ Erro");
                $("#progressLabel").text("Erro no processamento");
                $("#progressMessage").text(mensagem);
                $("#statStatus").text("✗ Erro");
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "atualizarErro", error);
            }
        }

            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * FUNÇÕES DE CONTROLE DO BOTÃO E BARRA DE PROGRESSO
             * ═══════════════════════════════════════════════════════════════════════════
             */

            /**
             * Marca o botão como processando
             * @@description Desabilita botão e mostra spinner de loading
            * @@returns { void}
            */
        function marcarBotaoProcessando() {
            try {
                $("#btnCalculaCustoViagens")
                    .addClass("btn-processing")
                    .prop("disabled", true)
                    .html('<i class="fa-duotone fa-spinner-third fa-spin"></i> Processando...');
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "marcarBotaoProcessando", error);
            }
        }

            /**
             * Restaura o botão ao estado inicial
             * @@description Habilita botão e restaura texto original
            * @@returns { void}
            */
        function desmarcarBotaoProcessando() {
            try {
                $("#btnCalculaCustoViagens")
                    .removeClass("btn-processing")
                    .prop("disabled", false)
                    .html('<i class="fa-duotone fa-play-circle"></i> Iniciar Cálculo dos Custos (Batch Otimizado)');
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "desmarcarBotaoProcessando", error);
            }
        }

            /**
             * Exibe a barra de progresso com animação
             * @@description Faz slideDown do container e oculta ícone de sucesso
            * @@returns { void}
            */
        function mostrarBarraProgresso() {
            try {
                $("#progressContainer").slideDown(300);
                $("#successIcon").hide();
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "mostrarBarraProgresso", error);
            }
        }

            /**
             * ═══════════════════════════════════════════════════════════════════════════
             * CONTADOR DE TEMPO DECORRIDO
             * ═══════════════════════════════════════════════════════════════════════════
             */

            /**
             * Inicia a contagem de tempo decorrido
             * @@description Atualiza o tempo a cada segundo no formato "Xm Xs"
            * @@returns { void}
            */
        function iniciarContagemTempo() {
            try {
                // Atualiza o tempo decorrido a cada segundo
                intervalTimerId = setInterval(() => {
                    if (inicioProcessamento) {
                        const agora = new Date();
                        const segundosDecorridos = Math.floor((agora - inicioProcessamento) / 1000);

                        // Formata tempo em minutos e segundos
                        let textoTempo = "";
                        if (segundosDecorridos < 60) {
                            textoTempo = segundosDecorridos + "s";
                        } else {
                            const minutos = Math.floor(segundosDecorridos / 60);
                            const segundos = segundosDecorridos % 60;
                            textoTempo = minutos + "m " + segundos + "s";
                        }

                        $("#statTempo").text(textoTempo);
                    }
                }, 1000);
            } catch (error) {
                Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "iniciarContagemTempo", error);
            }
        }

            /**
             * Para a contagem de tempo decorrido
             * @@description Limpa o intervalo do timer
            * @@returns { void}
            */
            function pararContagemTempo() {
                try {
                    if (intervalTimerId) {
                        clearInterval(intervalTimerId);
                        intervalTimerId = null;
                    }
                } catch (error) {
                    Alerta.TratamentoErroComLinha("CalculaCustoViagensTotal.cshtml", "pararContagemTempo", error);
                }
            }

            /**
             * Cleanup ao fechar a página
             * @@description Limpa intervalos ativos para evitar memory leaks
            */
        window.addEventListener('beforeunload', function () {
            try {
                pararContagemTempo();
                pararMonitoramentoProgresso();
            } catch (error) {
                console.error("Erro ao limpar intervalos:", error);
            }
        });
    </script>
